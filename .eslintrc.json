{
    "ecmaVersion": 6,
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "brace-style": 1,
        "camelcase": [1, {
            "properties": "never"
        }],
        "comma-spacing": [1, {
            "before": false,
            "after": true
        }],
        "comma-style": [1, "last"],
        "eol-last": 1,
        "eqeqeq": [1, "allow-null"],
        "func-call-spacing": [1, "never"],
        "indent": [1, 2, {
            "SwitchCase": 1
        }],
        "key-spacing": [1, {
            "beforeColon": false,
            "afterColon": true
        }],
        "keyword-spacing": [1, {
            "before": true,
            "after": true
        }],
        "new-parens": 1,
        "no-case-declarations": 1,
        "no-cond-assign": 1,
        "no-console": 1,
        "no-constant-condition": 1,
        "no-debugger": 1,
        "no-dupe-args": 1,
        "no-dupe-keys": 1,
        "no-duplicate-case": 1,
        "no-empty": 1,
        "no-empty-character-class": 1,
        "no-ex-assign": 1,
        "no-extra-semi": 1,
        "no-func-assign": 1,
        "no-invalid-regexp": 1,
        "no-irregular-whitespace": 1,
        "no-mixed-spaces-and-tabs": 1,
        "no-new-object": 1,
        "no-obj-calls": 1,
        "no-plusplus": 1,
        "no-redeclare": 1,
        "no-regex-spaces": 1,
        "no-sparse-arrays": 1,
        "no-tabs": 1,
        "no-trailing-spaces": 1,
        "no-undef": 1,
        "no-unexpected-multiline": 1,
        "no-unreachable": 1,
        "no-unsafe-finally": 1,
        "no-unused-vars": [1, {
            "vars": "all",
            "args": "none"
        }],
        "no-whitespace-before-property": 1,
        "semi": [1, "always"],
        "semi-spacing": [1, {
            "before": false,
            "after": true
        }],
        "space-before-blocks": [1, "always"],
        "space-before-function-paren": [1, {
            "anonymous": "always",
            "named": "never"
        }],
        "space-in-parens": [1, "never"],
        "space-infix-ops": 1,
        "space-unary-ops": [1, {
            "words": true,
            "nonwords": false
        }],
        "strict": [1, "safe"],
        "unicode-bom": [1, "never"],
        "use-isnan": 1,
        "valid-typeof": 1
    }
}
